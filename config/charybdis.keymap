#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    macros {
        To1_macro: To1_macro {
            compatible = "zmk,behavior-macro";
            label = "To1_macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_EFF &rgb_ug RGB_COLOR_HSB(128,100,50) &to 1>;
        };

        To1_macro_A: To1_macro_A {
            compatible = "zmk,behavior-macro";
            label = "To1_macro_A";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_COLOR_HSB(128,100,50) &to 1>;
        };

        To0_macro: To0_macro {
            compatible = "zmk,behavior-macro";
            label = "To0_macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_EFR &to 0>;
        };

        To2_macro_A: To2_macro_A {
            compatible = "zmk,behavior-macro";
            label = "To2_macro_A";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_COLOR_HSB(250,100,50) &to 2>;
        };

        To2_macro: To2_macro {
            compatible = "zmk,behavior-macro";
            label = "To2_macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_EFF &rgb_ug RGB_COLOR_HSB(250,100,50) &to 2>;
        };
    };

    combos {
        compatible = "zmk,combos";

        RGB {
            bindings = <&rgb_ug RGB_TOG>;
            key-positions = <20 46>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer-0 {
            // -----------------------------------------------------------------------------------------------------------------------------------
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                                   |  Y   |  U    |  I    |  O   |   P   |   \   |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | CTRL  |  Z  |  X  |  C   |  V   |  B   |        			          	|  N   |  M    |  ,    |  .   |   /   | SHIFT |
            // |             | GUI |  ~   |SHIFT | SPACE|                 			       | ENTER| BSPC  |   -   |  =   | 
            // |             |            | CTRL |  DEL |            			            | HOME |  CTRL | 
            // |             |            |  ALT | LEFT |					            |  END |  ALT |

            bindings = <
&kp GRAVE       &kp Q  &kp W        &kp E      &kp R       &kp T           &kp Y          &kp U       &kp I             &kp O              &kp P     &kp BACKSLASH
&kp CAPS        &kp A  &kp S        &kp D      &kp F       &kp G           &kp H          &kp J       &kp K             &kp L              &kp SEMI  &kp APOS
&kp LEFT_SHIFT  &kp Z  &kp X        &kp C      &kp V       &kp B           &kp N          &kp M       &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp FSLH  &kp RIGHT_SHIFT
                       &lt 3 MINUS  &kp EQUAL  &kp ESC     &kp SPACE       &kp BACKSPACE  &kp ENTER   &kp COMMA         &lt 3 PERIOD
                       &kp LALT     &kp LCTRL  &kp DELETE  &kp LEFT_WIN    &kp RIGHT_WIN  &To2_macro  &kp RCTRL         &To1_macro
            >;
        };

        layer-1 {
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // | `     |   1 |   2 |   3  |   4  |   5  |                   |   6  |   7   |   8   |   9  |    0  |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            //               |     |      |   [  |  ]   |                   |  {   |   }   |       |      |
            //               |     |      |      |      |                   |      |       |       |      |
            //               |     |      |      |      |                   |      |       |       |      |

            bindings = <
&kp F1   &kp F2  &kp F3      &kp F4      &kp F5       &kp F6           &kp F7  &kp F8        &kp F9          &kp F10         &kp F11          &kp F12
&kp TAB  &kp N1  &kp N2      &kp N3      &kp N4       &kp N5           &kp N6  &kp N7        &kp N8          &kp N9          &kp N0           &none
&none    &none   &kp C_MENU  &kp INSERT  &kp PAGE_UP  &kp PAGE_DOWN    &none   &none         &none           &kp UP_ARROW    &kp RIGHT_ARROW  &none
                 &none       &none       &none        &none            &none   &none         &kp LEFT_ARROW  &kp DOWN_ARROW
                 &none       &none       &To0_macro   &none            &none   &To2_macro_A  &none           &To0_macro
            >;
        };

        layer-2 {
            // ------------------------------------------------------------------------------------------------------------
            // |BTCLR| BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       | BTCLR |
            // |     | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |     | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |            | UNDO | CUT   | COPY  |PASTE |                |      |      |       |      |
            //                             |      |       |                |      |      |    
            //                             |      |       |                |      |      |      

            bindings = <
&none  &none  &none  &none  &none  &none    &kp N7         &kp N8      &kp N9          &kp KP_MINUS    &kp KP_DIVIDE    &kp PRINTSCREEN
&none  &none  &none  &none  &none  &none    &kp N4         &kp N5      &kp N6          &kp KP_PLUS     &kp KP_MULTIPLY  &kp HOME
&none  &none  &none  &none  &none  &none    &kp N1         &kp N2      &kp N3          &kp UP_ARROW    &kp RIGHT_ARROW  &kp END
              &none  &none  &none  &none    &kp BACKSPACE  &kp ENTER   &kp LEFT_ARROW  &kp DOWN_ARROW
              &none  &none  &none  &none    &kp ESC        &To0_macro  &kp N0          &To1_macro_A
            >;
        };

        layer_3 {
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &rgb_ug RGB_TOG  &rgb_ug RGB_EFF  &rgb_ug RGB_BRI  &rgb_ug RGB_BRD  &none  &none
&none       &none         &none         &none         &none         &none           &none            &none            &none            &none            &none  &none
&none       &none         &none         &none         &none         &none           &none            &none            &none            &none            &none  &none
                          &none         &bootloader   &none         &none           &none            &none            &bootloader      &none
                          &none         &none         &none         &none           &none            &none            &none            &none
            >;
        };
    };
};
